{
	"name": "scarlett",
	"type": "module",
	"version": "2.0.0",
	"description": "A strongly typed with zero dependencies, rest client library based on Fetch API.",
	"browser": "lib/index.umd.js",
	"module": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "vitest run",
		"test-watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"build": "rollup --config",
		"build-es3": "rollup --config --es3",
		"build-es6": "rollup --config --es6",
		"docs-build-tsdoc": "typedoc",
		"docs-build": "vitepress build docs",
		"docs-dev": "vitepress dev docs",
		"docs-preview": "vitepress preview docs",
		"bump": "bumpp"
	},
	"files": [
		"lib/*.*"
	],
	"engines": {
		"node": ">= 16.15 <19"
	},
	"exports": {
		".": "./lib/index.js"
	},
	"author": "Micene09 <giovanni.contino09@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/Micene09/scarlett.git"
	},
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^15.0.2",
		"@rollup/plugin-typescript": "^11.1.0",
		"@types/node": "^20.1.1",
		"@types/node-fetch": "^2.6.3",
		"@vitest/coverage-c8": "^0.32.2",
		"bumpp": "^9.1.0",
		"fastify": "^4.17.0",
		"rollup": "^3.21.5",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.34.1",
		"tslib": "^2.5.0",
		"typedoc": "^0.24.7",
		"typedoc-plugin-markdown": "^3.15.3",
		"typescript": "^5.0.4",
		"vitepress": "^1.0.0-beta.1",
		"vitest": "^0.31.0"
	},
	"keywords": [
		"rest",
		"typed",
		"client",
		"xhr",
		"http",
		"ajax",
		"promise",
		"node",
		"fetch",
		"typescript",
		"class",
		"library",
		"zero dependencies"
	],
	"packageManager": "yarn@3.5.1"
}
