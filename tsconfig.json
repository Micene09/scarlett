{
	"compilerOptions": {
		"strict": true,
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"lib": [ "ES2021", "dom" ],
		"types": [ "node" ]
	},
	"paths": {
		"@/*": [ "src/*" ]
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"tests/*.ts"
	],
	"exclude": [ "node_modules" ]
}